# ===========================================
# TELEGRAM BOT CONFIGURATION
# ===========================================
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz1234567890

# Your Telegram Chat ID (use @userinfobot to get your chat ID)
TELEGRAM_CHAT_ID=1234567890

# ===========================================
# OPENAI API CONFIGURATION
# ===========================================
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-abcdefghijklmnopqrstuvwxyz1234567890ABCDEFGHIJKLMNOPQRSTUVWXYZ

# ===========================================
# SCANNER CONFIGURATION (Optional)
# ===========================================
# Scan interval in seconds (default: 3600 = 1 hour)
SCAN_INTERVAL=3600

# Minimum confidence score for trade alerts (default: 70)
MIN_CONFIDENCE=70

# ===========================================
# TRADING PAIRS (Optional - Comma Separated)
# ===========================================
# Binance coins to monitor
BINANCE_COINS=LINK,DOGE,XRP,BNB,LTC,TRX,ADA,AVAX,SOL

# Deribit coins to monitor (BTC/ETH only support options)
DERIBIT_COINS=BTC,ETH

# ===========================================
# CHART CONFIGURATION (Optional)
# ===========================================
# Chart width in inches (default: 32)
CHART_WIDTH=32

# Chart height in inches (default: 14)
CHART_HEIGHT=14

# Chart DPI resolution (default: 150)
CHART_DPI=150

# ===========================================
# API RATE LIMITS (Optional)
# ===========================================
# Delay between API calls in seconds (default: 0.2)
API_DELAY=0.2

# Max retries for failed API calls (default: 3)
MAX_RETRIES=3

# ===========================================
# LOGGING CONFIGURATION (Optional)
# ===========================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path (leave empty for console only)
LOG_FILE=logs/trading_bot.log

# ===========================================
# FEATURE FLAGS (Optional)
# ===========================================
# Enable/Disable AI Analysis (true/false)
ENABLE_AI_ANALYSIS=true

# Enable/Disable Options Chain Analysis (true/false)
ENABLE_OPTIONS_ANALYSIS=true

# Enable/Disable Technical Indicators (true/false)
ENABLE_INDICATORS=true

# Send alerts only for high confidence trades (true/false)
HIGH_CONFIDENCE_ONLY=true
