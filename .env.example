# DeepSeek API Configuration
DEEPSEEK_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=123456789:ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghij
TELEGRAM_CHAT_ID=123456789

# Redis Configuration - Choose ONE option:

# OPTION 1: Railway.app Redis (Recommended for Cloud)
# Get this URL from Railway.app dashboard > Redis Plugin > $REDIS_URL
REDIS_URL=redis://:password@railway-redis-host:port

# OPTION 2: Local Redis (For Development)
# REDIS_URL=redis://localhost:6379/0

# OPTION 3: Redis Cloud or Upstash
# REDIS_URL=redis://:your_password@your_redis_host:6379

# Memory Management
MAX_MEMORY_MB=500

# Optional: API URLs (if you want to customize)
# DERIBIT_API_URL=https://www.deribit.com/api/v2/public

# Optional: Scan Interval (in seconds, default 1800 = 30 minutes)
# SCAN_INTERVAL=1800
